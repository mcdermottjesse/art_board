<div>
<h1 class="page-header">Art</h1>
 </div>

 <% if @arts.blank? %>
 <div class="message">
 <p>No art found</p>
 <% end %>
 </div>
 


<section class="container-index">

 <% @arts.each do |art| %>
  <% if art.user_id === @art %>
    <div>
      <div class="title">
      <%= art.name %>
      </div>

      <div class="img-index">
      <%= image_tag art.image, style:"width:100%; height: auto"%>
      </div>
      <br><br>
      <div class="desc">
      <%= art.description %>
      </div>

      <div class="view">
      <%= link_to 'View', art_path(art) %>
              </div>
              </div>

<% else %>
  <div class="messagetwo">
  <p>No art found</p>
  </div>
   
<% end %>

<% end %>
</section>

<%# first error message is for when searched art does not exist at all, seccond error is for when art does exist but is owned by another user %>