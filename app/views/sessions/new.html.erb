
<h1 class="login_title">Login</h1>
<div class="user_login">
   <%= form_tag '/login' do %>
   <div>
   <%= label_tag :username%>
   </div>
   <%= text_field_tag :username %>
   <div>
   <%= label_tag :password%>
   </div>
   <%= password_field_tag :password%>
   <div>
   <%= submit_tag "Sign In"%>
   </div>
<%end%>
</div>
<% if flash[:danger] %>
<div class="login_msg"><%= flash[:danger] %></div>
<% end %>
